<Page
    x:Class="Winky_Mobile_Test_Prototype_1.Welcome_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winky_Mobile_Test_Prototype_1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="645"  Width="910">

    <Page.Resources>
        <DataTemplate x:Key="ResultsListViewTemplate" x:DataType="local:BluetoothLEDeviceDisplay">
            <TextBlock>
                        <Run Text="{x:Bind Name, Mode=OneWay}" FontWeight="Bold"/>
            </TextBlock>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,27,0,0" Text="Winky Mobile " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="60"/>
        <TextBlock x:Name="Select_Winky_TBlock" HorizontalAlignment="Left" Margin="182,152,0,0" Text="Device ID" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="40"/>
        <ComboBox x:Name="Select_CBox" Margin="171,226,0,0" Width="189" FontSize="15"                       
                  ItemTemplate="{StaticResource ResultsListViewTemplate}"
                  ItemsSource="{x:Bind KnownDevices, Mode=OneWay}" SelectionChanged="Select_CBox_SelectionChanged" IsEnabled="False" RenderTransformOrigin="0.5,0.5">
            <ComboBox.RenderTransform>
                <CompositeTransform ScaleX="2" ScaleY="2"/>
            </ComboBox.RenderTransform>
        </ComboBox>
        <ToggleButton x:Name="Scan_Btn" Content="Scan" Margin="653,217,0,0" VerticalAlignment="Top" FontSize="30" Width="161" Background="#538ED7" BorderBrush="Black" Foreground="White" BorderThickness="0.1,0.1,0.1,0.1" Click="Scan_Btn_Click" RenderTransformOrigin="0.5,0.5" >
            <ToggleButton.RenderTransform>
                <CompositeTransform ScaleX="1.5" ScaleY="1.5"/>
            </ToggleButton.RenderTransform>
        </ToggleButton>
        <Button x:Name="Begin_Test_Btn" Content="Start" Margin="653,368,0,0" FontSize="30" Width="161" Background="#538ED7" BorderBrush="Black" Foreground="White" BorderThickness="0.1,0.1,0.1,0.1" IsEnabled="False" Click="Begin_Test_Btn_Click" VerticalAlignment="Top" Height="48" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <CompositeTransform ScaleX="1.5" ScaleY="1.5"/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="Connect_Btn" Content="Connect" Margin="185,368,0,0" VerticalAlignment="Top" FontSize="30" Width="161" Background="#538ED7" BorderBrush="Black" Foreground="White" BorderThickness="0.1,0.1,0.1,0.1" IsEnabled="False" Click="Connect_Btn_Click" Height="48" RenderTransformOrigin="0.5,0.5" >
            <Button.RenderTransform>
                <CompositeTransform ScaleX="1.5" ScaleY="1.5"/>
            </Button.RenderTransform>
        </Button>
        <ProgressBar x:Name="Progress_Bar" HorizontalAlignment="Left" Height="39" Margin="271,544,0,0" VerticalAlignment="Top" Width="389" Visibility="Visible" Value="100" RenderTransformOrigin="0.5,0.5" >
            <ProgressBar.RenderTransform>
                <CompositeTransform ScaleX="2" ScaleY="2"/>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <TextBlock x:Name="ProgressBar_Text" TextAlignment="Center" HorizontalAlignment="Left" Margin="123,537,0,0" Text="---" VerticalAlignment="Top" FontSize="40" Foreground="White" Width="667"/>

    </Grid>
</Page>
